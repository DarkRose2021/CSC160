<Window x:Class="DNDGeneratior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDGeneratior" 
		mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
		<Label Content="Dungeons and Dragons Randomizer" HorizontalAlignment="Center" FontSize="23"/>
		<Label Content="{Binding Name}" Name="lblName" FontSize="23" HorizontalAlignment="Center"/>
		<Button Name="btnRandom" Content="Randomize"  Width="200" Click="btnRandom_Click"/>
	</StackPanel>
</Window>
