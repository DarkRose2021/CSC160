<UserControl x:Class="DNDGeneratior.UserControl.UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DNDGeneratior.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <WrapPanel>
		<TextBlock Text="{Binding Title}" Width="{Binding TitleWidth}" />
		<TextBox Name="txtInput" Width="200" MaxLength="{Binding MaxLength}" />
	</WrapPanel>
</UserControl>
