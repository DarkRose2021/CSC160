<Window x:Class="Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
	<StackPanel>
		<Label Content="Rock, Paper, Scissors" HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="25"/>
		<WrapPanel HorizontalAlignment="Center">
			<Button Name="rock" Margin="10" Click="rock_Click">
				<Image  Height="148" Width="152" Source="/Resources/rock.jpg" />
			</Button>
			<Button Name="paper" Margin="10" Click="paper_Click">
				<Image Height="148" Width="152" Source="/Resources/paper.png" />
			</Button>
			<Button Name="scissors" Margin="10" Click="scissors_Click">
				<Image Height="148" Width="152" Source="/Resources/scissors.png" />
			</Button>
		</WrapPanel>
		<WrapPanel HorizontalAlignment="Center">
			<Label Name="temp" Content="Computer Chose:" FontSize="20"/>
			<Image Height="148" Width="152" Name="compImg" Margin="10" />
		</WrapPanel>
		<Label Name="winner" FontSize="25" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
