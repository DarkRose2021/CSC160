<Window x:Class="Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>
		<Label Content="Rock, Paper, Scissors" HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="25"/>
		<WrapPanel>
			<StackPanel HorizontalAlignment="Center" Margin="10">
				<Label Content="Pick Rock, Paper, or Scissors" Width="160" Margin="10"/>
				<TextBox Name="userPick"  Width="160" Margin="10"/>
				<Button Name="btnUser" Content="Choose" Width="60" Margin="10" Click="btnUser_Click"/>
			</StackPanel>

			<StackPanel HorizontalAlignment="Center" Margin="10">
				<Label Content="User:" />
				<TextBlock Name="userInput" Width="160" Text="{Binding Path=Text, ElementName=userPick}"/>
				<Label Content="Computer:" />
				<TextBlock Name="compInput" Width="160" />
			</StackPanel>
		</WrapPanel>
		<Label Name="winner" FontSize="25" />
	</StackPanel>
</Window>
