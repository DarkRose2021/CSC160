<Window x:Class="WPF.DataBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="DataBinding" Height="500" Width="400">
    <StackPanel Margin="10">
		<TextBlock x:Name="txtValue" />
		<WrapPanel>
			<TextBlock Text="Value" FontWeight="Bold" />
			<TextBlock Text="{Binding Path=Text, ElementName=txtValue}" />
		</WrapPanel>
		<WrapPanel Margin="0 10">
			<TextBlock Text="Title:"/>
			<TextBox Name="txtTitle" Width="150" Text="{Binding Title, UpdateSourceTrigger=Explicit}" />
		</WrapPanel>
		<Button Content="Update" Click="Button_Click"/>



		<WrapPanel Margin="0 10">
			<TextBlock Text="Size: "/> 
			<TextBlock Text="{Binding Width}" Width="50"/> 
			<TextBlock Text="x  "/>
			<TextBlock Text="{Binding Height}" Height="50"/> 
		</WrapPanel>
	</StackPanel>
</Window>
